<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:id="@+id/ll_downloading"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_cover"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="3dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/tv_cover"
            android:gravity="left|top"
            android:maxLines="2"
            android:padding="10dp"
            android:ellipsize="end"
            android:text="色情电影"
            android:textColor="#000"
            android:textSize="17sp" />

        <com.example.xiudd.sese.view.CircleNumberProgressBar
            android:id="@+id/iv_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cnpb_circle_radius="@dimen/dp_15"
            app:cnpb_bar_width="@dimen/dp_4"
            app:cnpb_text_color="#f7b93c"
            app:cnpb_unit="%"
            app:cnpb_reach_color="#1E90FF"
            app:cnpb_text_size="10sp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:src="@mipmap/ic_download"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#fafafa" />
</LinearLayout>