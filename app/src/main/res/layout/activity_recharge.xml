<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.example.xiudd.sese.activity.RechargeActivity">

    <include layout="@layout/common_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="center"
                android:text="羞涩APP会员充值"
                android:textColor="#000"
                android:textSize="@dimen/dp_23"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_3"
                        android:layout_weight="1"
                        android:background="@drawable/vip_tv_bg"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_15">

                        <CheckBox
                            android:id="@+id/cb_sv"
                            android:drawableLeft="@mipmap/cp_rank_first"
                            android:drawablePadding="@dimen/dp_8"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:checked="true"
                            android:gravity="center"
                            android:text="88元"
                            android:textColor="@color/selector_text_black_to_red"
                            android:textSize="19sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="超级会员" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_3"
                        android:layout_weight="1"
                        android:background="@drawable/vip_tv_bg"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_15">

                        <CheckBox
                            android:id="@+id/cb_pv"
                            android:layout_width="wrap_content"
                            android:drawableLeft="@mipmap/cp_rank_second"
                            android:drawablePadding="@dimen/dp_8"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:checked="false"
                            android:gravity="center"
                            android:text="60元"
                            android:textColor="@color/selector_text_black_to_red"
                            android:textSize="19sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="黄金会员" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_3"
                        android:layout_weight="1"
                        android:background="@drawable/vip_tv_bg"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_15">

                        <CheckBox
                            android:id="@+id/cb_wv"
                            android:layout_width="wrap_content"
                            android:drawableLeft="@mipmap/cp_rank_third"
                            android:drawablePadding="@dimen/dp_8"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:checked="false"
                            android:gravity="center"
                            android:text="40元"
                            android:textColor="@color/selector_text_black_to_red"
                            android:textSize="19sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="白银会员" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_3"
                        android:layout_weight="1"
                        android:background="@drawable/vip_tv_bg"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_15">

                        <CheckBox
                            android:id="@+id/cb_gv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:checked="false"
                            android:gravity="center"
                            android:text="20元"
                            android:textColor="@color/selector_text_black_to_red"
                            android:textSize="19sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="普通会员" />
                    </LinearLayout>
                </LinearLayout>
            </RadioGroup>

            <Button
                android:id="@+id/btn_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/login_btn_bg_c_8_red"
                android:text="立即支付"
                android:textColor="#ffffff" />

            <TextView
                android:textSize="17sp"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:text="\t\t\t\t温馨提示：羞涩APP主要提供社区服务，APP部分功能使用需要收费，用户只需要充值相应的金额就可以使用对应的功能。
\n\t\t\t\t祝用户使用愉快！" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
